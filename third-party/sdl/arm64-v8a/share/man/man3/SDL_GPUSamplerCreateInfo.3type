.TH SDL_GPUSamplerCreateInfo 3type "SDL 3.1.3" "Simple Directmedia Layer" "SDL3 DATATYPES"
.SH NAME
SDL_GPUSamplerCreateInfo \- A structure specifying the parameters of a sampler\[char46]
.SH HEADER FILE
Defined in SDL3/SDL_gpu\[char46]h

.SH SYNOPSIS
.nf
.B #include \(dqSDL3/SDL.h\(dq
.PP
.BI "typedef struct SDL_GPUSamplerCreateInfo
.BI "{
.BI "    SDL_GPUFilter min_filter;                  /**< The minification filter to apply to lookups. */
.BI "    SDL_GPUFilter mag_filter;                  /**< The magnification filter to apply to lookups. */
.BI "    SDL_GPUSamplerMipmapMode mipmap_mode;      /**< The mipmap filter to apply to lookups. */
.BI "    SDL_GPUSamplerAddressMode address_mode_u;  /**< The addressing mode for U coordinates outside [0, 1). */
.BI "    SDL_GPUSamplerAddressMode address_mode_v;  /**< The addressing mode for V coordinates outside [0, 1). */
.BI "    SDL_GPUSamplerAddressMode address_mode_w;  /**< The addressing mode for W coordinates outside [0, 1). */
.BI "    float mip_lod_bias;                        /**< The bias to be added to mipmap LOD calculation. */
.BI "    float max_anisotropy;                      /**< The anisotropy value clamp used by the sampler. If enable_anisotropy is false, this is ignored. */
.BI "    SDL_GPUCompareOp compare_op;               /**< The comparison operator to apply to fetched data before filtering. */
.BI "    float min_lod;                             /**< Clamps the minimum of the computed LOD value. */
.BI "    float max_lod;                             /**< Clamps the maximum of the computed LOD value. */
.BI "    bool enable_anisotropy;                /**< true to enable anisotropic filtering. */
.BI "    bool enable_compare;                   /**< true to enable comparison against a reference value during lookups. */
.BI "    Uint8 padding1;
.BI "    Uint8 padding2;
.BI "
.BI "    SDL_PropertiesID props;                    /**< A properties ID for extensions. Should be 0 if no extensions are needed. */
.BI "} SDL_GPUSamplerCreateInfo;
.fi
